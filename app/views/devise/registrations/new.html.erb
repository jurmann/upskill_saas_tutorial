<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      
      <% if params[:plan] =='2' %>
      
        <div class = "text-center">
          <h1> Pro Account</h1>
          <p> Sign up for the pro account for $1/month and get access to the community and contact information</p>
        </div>
        
        <% else %>
          <div class="text-center">
            <h1> Basic Account</h1>
            <p> Sign up for free and get access to the basic community</p>
          </div>
        <% end %>  
        
      
      
      <div class="well">
        <h2> Sign Up</h2>
        
        <% if params[:plan] == '2'%>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>

        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>